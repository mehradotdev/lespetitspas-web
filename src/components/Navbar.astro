---
// Navbar component with responsive menu
---

<header class="fixed top-0 left-0 right-0 z-100 bg-white/95 glass shadow-sm p-2">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex space-between">
    <div class="navbar-start">
      <a
        href="/#"
        class="btn btn-ghost text-4xl leading-relaxed font-bold text-secondary-content hover:text-secondary-content/80 hover:bg-transparent hover:border-transparent"
        style="font-family: Caveat Brush, serif;"
      >
        <img class="h-14" src="/logo.svg" alt="lespetitspas logo" />
        lespetitspas
      </a>
    </div>

    <div class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal px-1 gap-2">
        <li>
          <a
            href="#features"
            class="text-gray-700 text-base hover:text-secondary-content font-medium"
            >Features</a
          >
        </li>
        <li>
          <a
            href="#testimonials"
            class="text-gray-700 text-base hover:text-secondary-content font-medium"
            >Testimonials</a
          >
        </li>
        <li>
          <a
            href="#about"
            class="text-gray-700 text-base hover:text-secondary-content font-medium"
            >About Shruti</a
          >
        </li>
        <li>
          <a
            href="#contact"
            class="text-gray-700 text-base hover:text-secondary-content font-medium"
            >Contact</a
          >
        </li>
      </ul>
    </div>

    <div class="navbar-end gap-2">
      <a
        href="#contact"
        class="btn btn-accent hidden sm:inline-flex text-base transition-all duration-300 hover:scale-105"
      >
        Book a Free Demo
      </a>

      <div class="dropdown dropdown-end lg:hidden">
        <label tabindex="0" class="btn btn-ghost btn-circle">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </label>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow-lg bg-base-100 rounded-box w-52"
        >
          <li><a href="#features" class="text-base">Features</a></li>
          <li><a href="#about" class="text-base">About Shruti</a></li>
          <li><a href="#testimonials" class="text-base">Testimonials</a></li>
          <li><a href="#contact" class="text-base">Contact</a></li>
        </ul>
      </div>
    </div>
  </div>
</header>
