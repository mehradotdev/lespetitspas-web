---
import { Mail, Instagram } from '@lucide/astro';
---

<footer id="contact" class="footer footer-center p-10 bg-secondary-content text-white">
	<div class="max-w-7xl mx-auto w-full">
		<div class="grid grid-cols-1 md:grid-cols-3 gap-12 w-full text-left">
			<div>
				<h3 class="text-2xl font-bold mb-3" style="font-family: Poppins, serif;">
					lespetitspas
				</h3>
				<p class="opacity-80 italic text-base">Small steps to big fluency.</p>
			</div>
			
			<div>
				<h4 class="text-lg font-semibold mb-4">Quick Links</h4>
				<ul class="space-y-2">
					<li>
						<a href="#features" class="opacity-80 hover:opacity-100 transition-opacity text-base">
							Features
						</a>
					</li>
					<li>
						<a href="#about" class="opacity-80 hover:opacity-100 transition-opacity text-base">
							About Shruti
						</a>
					</li>
					<li>
						<a href="#testimonials" class="opacity-80 hover:opacity-100 transition-opacity text-base">
							Testimonials
						</a>
					</li>
				</ul>
			</div>
			
			<div>
				<h4 class="text-lg font-semibold mb-4">Get in Touch</h4>
				<div class="space-y-3">
					<a href="mailto:lespetitspashub@gmail.com" class="flex items-center gap-2 opacity-80 hover:opacity-100 transition-opacity text-base">
						<Mail />
						<span>lespetitspashub@gmail.com</span>
					</a>
					<a href="https://www.instagram.com/lespetitspas_hub" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 opacity-80 hover:opacity-100 transition-opacity text-base">
						<Instagram />
						<span>@lespetitspas_hub</span>
					</a>
				</div>
			</div>
		</div>
		
		<div class="divider"></div>
		
		<div>
			<p class="opacity-70 text-base">&copy; 2024 lespetitspas. All rights reserved.</p>
		</div>
	</div>
</footer>
